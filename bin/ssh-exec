# enable unbound variable checking
set -u

# os check
[[ "$(uname -s)" != 'SunOs' ]] || { echo 'ERROR: this script is known not to work on Solaris'; exit 1; }

# dependency check
[[ "$(which expect)" ]] || { echo 'ERROR: expect command is not available'; exit 1; }

prog=$(basename $0)
version=1.0

commands=
concurrency=1
hosts=( )
load_ssh_agent=false
output=/dev/null
password_auth=false
password_patterns=( )
password_prompts=( )
root_password_pattern='#null#'
ssh_agent=true
su=false
sudo=false
sudo_password_pattern='#null#'
login_password_pattern='#null#'
username="$USER"

tmp_dir="$(mktemp -dt $prog.XXXXX)" || error 'cannot create temp directory!'
script="${tmp_dir}/commands.exp"

trap 'rm -rf $tmp_dir; $load_ssh_agent && ssh_agent_destroy; exit;' EXIT
trap 'stty echo; cat $tmp_dir/*.{running,log} 2>/dev/null; echo -e "\nAborted!" >&2; rm -rf $tmp_dir; jobs -p | xargs kill 2>/dev/null; $load_ssh_agent && ssh_agent_destroy; exit;' INT TERM

# initialize expect script used during ssh session
cat > "$script" <<'EXPECT'
#!/usr/bin/expect
set timeout 10
set prompt "(>|%|#|\\$) $"
set username [lindex $argv 0]
set host [lindex $argv 1]
set root_password [lindex $argv 2]
set sudo_password [lindex $argv 3]
set login_password [lindex $argv 4]

log_user 0

spawn -noecho ssh $username@$host
set connected 1

expect_after {
    timeout {
        send_user "\n\n                   #  Aborted! - Timeout Looking for Prompt: $host  #\n"
        return
    } default {
        send_user "\n\n                   #  Aborted! - Error State Observed: $host  #\n"
        return
    }
}

expect "*nter passphrase" {
    send_user "\n\n                   #  Aborted! - Missing Passphrase: $host  #\n"
    return
} "*denied" {
    send_user "\n\n                   #  Aborted! - Permission Denied: $host  #\n"
    return
} "*yes/no" {
    send_user "\n\n                   # Accepting Authenticity: $host #\n"
    send "yes\r"
    expect -re $prompt {
        send_user "\n\n                   #       Connect:     $host       #\n"
        send "\r"
        log_user 1
    }
} "*ssword" {
    if {"$login_password" == "#null#"} {
        send_user "\n\n                   #  Aborted! - No Login Password Available: $host  #\n"
        return
    }

    send "$login_password\r"
    expect -re $prompt {
        send_user "\n\n                   #       Connect:     $host       #\n"
        send "\r"
        log_user 1
    } "*ssword" {
        send_user "\n\n                   #  Aborted! - Invalid Login Password: $host  #\n"
        return
    }
} -re $prompt {
    send_user "\n\n                   #       Connect:     $host       #\n"
    send "\r"
    log_user 1
}

if {"$root_password" != "#null#"} {
    sleep 1
    send "su -\r"
    expect "*sword:" {
        send "$root_password\r"
        expect "su: *" {
            send "exit\r"
            send_user "\n\n                   #  Aborted! - Invalid Root Password: $host  #\n"
            exit
        } -re $prompt {
            # send ctrl-c to force a prompt
            send \003
        }
    }
}

if {"$sudo_password" != "#null#"} {
    sleep 1
    send "sudo su -\r"
    expect "*sword" {
        send "$sudo_password\r"
        expect "*sword" {
            # send ctrl-c to force a prompt
            send \003
            send "exit\r"
            send_user "\n\n                   #  Aborted! - Invalid SUDO Password: $host  #\n"
            exit
        }
    } -re $prompt {
        sleep 1
    }
}

#COMMANDS#

if {"$root_password" != "#null#" || "$sudo_password" != "#null#"} {
    expect -re $prompt {
        log_user 0
        # exiting root session
        send "exit\r"
    }
}

if {$connected} {
    sleep 1
    expect -re $prompt
    log_user 0
    send "exit\r"
    send_user "\n\n                   #       Disconnect:  $host       #\n"
}
EXPECT


# print command usage
#
# $1 - boolean determining if full formatted output should be printed
print_usage () {
    local verbose b c i u

    verbose=false
    [[ $# -gt 0 ]] && verbose=true

    b='\033[1m'
    c='\033[0m'
    i='\033[3m'
    u='\033[4m'

    if $verbose; then
        echo "$prog $version" | tr '[:lower:]' '[:upper:]'
        echo
        echo -e "${b}NAME${c}"
        echo -e "\t${b}$prog${c} â€” executes commands on remote hosts; optionally as root"
        echo
    fi

    echo -e "${b}SYNOPSIS${c}"
    echo -e "\t${b}$prog${c} [${b}-hrRpP${c}] [${b}-c${c} ${u}count${c}] [${b}-f${c} ${u}commands file${c}] [${b}-o${c} ${u}output file${c}] [${b}-u${c} ${u}username${c}] ${u}host1..host2..etc${c}"
    echo

    if $verbose; then
        echo -e "${b}DESCRIPTION${c}"
        echo -e "\tThe goal of this script is to provide a secure method for"
        echo -e "\texecuting scripts on remote hosts securely while also allowing"
        echo -e "\tfor scripts to be executed as root."
        echo
        echo -e "\t${b}Password Handling${c}"
        echo -e "\tPasswords processed by ssh-exec are expected to follow a pattern where"
        echo -e "\tthe letter 'X' (upper or lower case) when immediately followed by a"
        echo -e "\tnumber shall be substituted with the appropriate letter from the"
        echo -e "\thostname currently being executed against."
        echo
        echo -e "\tExample:\t pattern: ${b}passX3wordx1X4${c}"
        echo -e "\t\t\thostname: ${b}example.com${c}"
        echo -e "\t\t\t  result: ${b}passAwordeM${c}"
        echo
        echo -e "\t${b}Troubleshooting${c}"
        echo -e "\tIt is expected that the results of your script end"
        echo -e "\twith a prompt as recognized by the regular expression:"
        echo
        echo -e "\t\t\t${b}/(>|%|#|\\$) \$/${c}"
        echo
        echo -e "\tYour script will hang should the prompt not be detected."
        echo
    fi

    echo -e "${b}OPTIONS${c}"
    echo -e "\t${b}-c${c} ${u}count${c}"
    echo -e "\t\tthe number of jobs to run concurrently; defaults to 10 if no value is provided"
    echo -e "\t\t\tNOTE: While the script will execute in separate threads up to the concurrency"
    echo -e "\t\t\t      level you provide, the system results will always be returned in"
    echo -e "\t\t\t      order that you specified your hosts."
    echo
    echo -e "\t${b}-f${c} ${u}file${c}"
    echo -e "\t\tthe file containing commands to be executed"
    echo
    echo -e "\t${b}-h${c}\tdisplay this help and exit"
    echo
    echo -e "\t${b}-o${c} ${u}file${c}"
    echo -e "\t\tthe file where stdout should be logged"
    echo
    echo -e "\t${b}-r${c}\trun commands as root via 'su -' authentication"
    echo
    echo -e "\t${b}-R${c}\trun commands as root via 'sudo su -' authentication"
    echo
    echo -e "\t${b}-u${c} ${u}username${c}"
    echo -e "\t\tthe username used during initial ssh login"
    echo
    echo -e "\t${b}-p${c}\tprompt for user password; used if key login fails"
    echo
    echo -e "\t${b}-P${c}\tprompt for user password; disables spawn ssh-agent"
    echo

    if $verbose; then
        echo -e "${b}TOKENS${c}"
        echo -e "\tssh-exec tokens are identified by a hash (#) at the start of"
        echo -e "\ta line followed by one of the reserved words listed below."
        echo
        echo -e "\t${b}#passwd ${u}<username>${c}${b}#${c}"
        echo -e "\t\tInserts the commands for changing the provided username's password."
        echo -e "\t\tIf no username is provided, user will default to root."
        echo
        echo -e "\t${b}#tripwire#${c}"
        echo -e "\t\tInserts the commands necessary for performing a tripwire update."
        echo
        echo -e "\t${b}#expect ${u}pattern${c}${b}#${c}"
        echo -e "\t\tExplicitly look for a phrase using expect format prior to executing"
        echo -e "\t\tthe next command."
        echo
        echo -e "\t${b}#interact#${c}"
        echo -e "\t\tThis will pause automatic execution and allow you to execute commands"
        echo -e "\t\tdirectly into the console.  When you are finished and would like to"
        echo -e "\t\tgive control back to automatic execution, simply type ${b}#x${c}"
        echo
        echo -e "\t${b}#password${u}:<repeat>:<prompt contents>${c}${b}#${c}"
        echo -e "\t\tThis token allows you to securely collect password patterns prior to"
        echo -e "\t\truntime and then have them injected the number of times specified"
        echo -e "\t\tvia the second argument."
        echo -e "\t\tA custom prompt can also be provided as the third argument."
        echo
        echo -e "\t${b}#timeout ${u}duration${c}${b}#${c}"
        echo -e "\t\tOverride the default 10 second timeout that expect uses waiting"
        echo -e "\t\tfor a prompt."
        echo -e "\t\tTimeout is in seconds; while a value of -1 represents unlimited"
        echo -e "\t\tIf no value is provided timeout will be reset to 10 seconds"
        echo
        echo -e "${b}EXAMPLES${c} - (examples are based on execution within a BASH shell)"
        echo -e "\t${b}Executing simple one liners${c}"
        echo -e "\tFor very simple scripts you can just use a here-string (i.e. <<<)"
        echo
        echo -e "\t\t${i}ssh-exec example.com <<<'ls -la ~/.ssh'${c}"
        echo
        echo -e "\t${b}Executing multi-line scripts${c}"
        echo -e "\tFor more complex scripts you can simply hit enter and type your script"
        echo -e "\tcontents directly into stdin followed by ctrl-d to finish."
        echo
        echo -e "\tIf you would like to store your script within your shell's history you"
        echo -e "\twould probably rather use a here-doc (i.e. <<'EOF')."
        echo
        echo -e "\tNOTE: The use of quotes around the EOF delimeter is to ensure the shell"
        echo -e "\t      does not expand any variables within your script."
        echo
        echo -e "\t\t${i}ssh-exec example.com <<'EOF'"
        echo -e "\t\tuptime"
        echo -e "\t\tcat \$HOME/.ssh/authorized_keys"
        echo -e "\t\ttail -n15 \$HOME/.bash_history"
        echo -e "\t\tEOF${c}"
        echo
        echo -e "\t${b}Execute a command concurrently against multiple systems as root${c}"
        echo
        echo -e "\t\t${i}ssh-exec -r -c example-{1..50}.com <<<'cat /etc/shadow'"
        echo
        echo -e "\t${b}Login to a list of servers for manual maintenance${c}"
        echo
        echo -e "\t\t${i}ssh-exec -r example-{1..50}.com <<<'#interact#'"
        echo
        echo -e "\t${b}Perform a standard tripwire update; overriding the default concurrency of 10${c}"
        echo
        echo -e "\t\t${i}ssh-exec -r -c 25 example-{1..50}.com <<<'#tripwire#'"
        echo
        echo -e "\t${b}Change root password followed by tripwire update${c}"
        echo
        echo -e "\t\t${i}ssh-exec -r -c example-{1..50}.com <<'EOF'"
        echo -e "\t\t#passwd#"
        echo -e "\t\t#tripwire#"
        echo -e "\t\tEOF${c}"
        echo
        echo -e "\t${b}Change testuser's password followed by tripwire update${c}"
        echo
        echo -e "\t\t${i}ssh-exec -r -c example-{1..50}.com <<'EOF'"
        echo -e "\t\t#passwd testuser#"
        echo -e "\t\t#tripwire#"
        echo -e "\t\tEOF${c}"
        echo
        echo -e "\t${b}Override timeout period for long running script${c}"
        echo
        echo -e "\t\t${i}ssh-exec example.com <<'EOF'"
        echo -e "\t\tuptime"
        echo -e "\t\t#timeout 25#"
        echo -e "\t\tsleep 20; echo 'sleep complete'"
        echo -e "\t\tEOF${c}"
        echo
    fi
}

# print error message followed by usage and exit
error () {
    echo -e "\nERROR: $1\n" >&2
    print_usage >&2
    exit 1
}

# return generated password using provided hostname and pattern
#
# $1 - hostname: string source of letters used during substitution
# $2 - pattern:  root password with the letter 'X' (upper and lower case)
#                when immediately followed by a number being substituded
#                with the appropriate letter from the provided hostname
#                e.g. passAwordeM is derived from:
#                     pattern=passX3wordx1X4
#                     hostname=example.com
get_password () {
    awk -v host="$1" -v pattern="${2-}" '
        function getletter(case_pos) {
            char_case=substr(case_pos, 1, 1)
            pos=substr(case_pos, 2)
            char=(char_case == "X") ? toupper(substr(host, pos, 1)) : tolower(substr(host, pos, 1))

            if (char == 1) {
                return "!"
            } else if (char == 2) {
                return "@"
            } else if (char == 3) {
                return "#"
            } else if (char == 4) {
                return "$"
            } else if (char == 5) {
                return "%"
            } else if (char == 6) {
                return "^"
            } else if (char == 7) {
                return "&"
            } else if (char == 8) {
                return "*"
            } else if (char == 9) {
                return "("
            } else if (char == 0) {
                return ")"
            } else if (char == "-") {
                return "_"
            } else if (char == ".") {
                return ">"
            } else {
                return char
            }
        }

        BEGIN {
            do {
                idx = match(pattern, /[xX][0-9]/)
                token = substr(pattern, RSTART, RLENGTH)
                letter = getletter(token)
                if (idx != 0) {
                    gsub(token, letter, pattern)
                }
            } while (idx != 0)

            print pattern
        }' | sed -e 's| |\ |g'
}

# collect password patterns from user
get_password_patterns () {
    if $su; then
        echo -n "Enter Root Password Pattern: "
        stty -echo
        read root_password_pattern
        stty echo
        echo
    fi

    if $password_auth; then
        echo -n "Enter Login Password Pattern: "
        stty -echo
        read login_password_pattern
        stty echo
        echo
    fi

    if $sudo; then
        echo -n "Enter SUDO Password Pattern: "
        stty -echo
        read sudo_password_pattern
        stty echo
        echo
    fi

    # extract password prompts from commands
    while read password_prompt; do
        password_prompts+=( "$password_prompt" )
    done < <( awk -F: 'BEGIN {count=0} /^#password.*#$/ {
        if ($3) {
            print substr($0, index($0,$3), length($3)-1)
        } else {
            count++
            print "Enter Password #"count
        }
    }' <<<"$commands" )

    if [[ ${#password_prompts[*]} -gt 0 ]]; then
        # read in password patterns from stdin
        for password_prompt in "${password_prompts[@]}"; do
            echo -n "${password_prompt}: "
            stty -echo
            read password_pattern
            stty echo
            echo

            if [[ "$password_pattern" ]]; then
                password_patterns+=( "$password_pattern" )
            else
                error 'invalid password pattern'
            fi
        done
    fi
}

# convert provided commands into expect commands
generate_script () {
    local count

    count=0

    # initial command conversion
    sed '/^#COMMANDS#/ r /dev/stdin' $script > "${script}.tmp" < \
        <(sed -e '/^#/! s_\\\(.\)_\\\\\1_g' \
            -e '/^#/! s_\$_\\$_g' \
            -e '/^#/! s_\"_\\\"_g' \
            -e '/^#/! s_\[_\\[_g' \
            -e '/^#/! s_(_\(_g' \
            -e '/^#/! s_^_expect -re $prompt;send "_' \
            -e '/^#/! s_$_\\r"_' \
            -e 's_^#timeout#$_set timeout 10_' \
            -e 's_^#\(timeout .*\)#.*_set \1_' \
            -e 's_^#\(expect .*\)#.*_\1_' \
            <<<"$commands")
    sed '/^#COMMANDS#/d' "${script}.tmp" > "$script"

    # replace #interact# token with expect code
    sed '/^#interact#/ r /dev/stdin' $script > "${script}.tmp" <<'INTERACT'
send_user "\n\n                   ##      Entering Interactive Mode      ##\n"
send_user "                   ### type \"#x\" to end your interaction ###\n"
send "\r"
expect -re $prompt
interact {
    \#x {
        send_user "\n\n                   ##      Exiting Interactive Mode       ##\n"
        # send ctrl-c to force a prompt
        send \003
        return
    }
    -o eof {
        send_user "\n\n                   #  Aborted! - User Disconnected During Interact: $host  #\n"
        exit
    }
}
INTERACT

    # remove interact token
    sed '/^#interact/d' "${script}.tmp" > "$script"


    # replace #password# token with expect code
    count=4
    while grep -q '^#password' "$script"; do
        read line password_count <<<$(awk -F: '/^#password/ {if ($2) {print NR,$2} else {print NR,1}; exit}' "$script")
        ((count+=1))
        password_count=${password_count%#}

        # remove password token
        sed "$line r /dev/stdin" "$script" > "${script}.tmp" < <(
            echo "set password${count} [lindex \$argv $count]"
            for i in $(eval "echo {1..$password_count}"); do
                echo 'sleep 1'
                echo "send \"\$password${count}\r\""
            done
        )

        sed "${line}d" "${script}.tmp" > "$script"
    done

    rm -f "${script}.tmp"
}

# initialize ssh agent
ssh_agent_init () {
    echo -e "\nINITIALIZING SSH AGENT" >&2

    eval $(ssh-agent | sed '/echo Agent/d')

    # load all dsa & rsa keys (excluding symlinks)
    for key in $HOME/.ssh/*_?sa; do
        [[ ! -h "$key" ]] && ssh-add "$key"
    done
}

# destroy ssh agent
ssh_agent_destroy () {
    if kill $SSH_AGENT_PID 2>/dev/null; then
        echo -e "\nDESTROYING SSH AGENT" >&2
        export SSH_AGENT_PID=
        export SSH_AUTH_SOCK=
    fi
}

# parse tokens from commands
parse_tokens () {
    local commands_file

    commands_file="$tmp_dir/commands"

    # expand #tripwire# token
    commands=$(
        sed '/^#tripwire#/ r /dev/stdin' <(echo "$commands") > "$commands_file" <<'TRIPWIRE'
#timeout -1#
tripwire -m c; tripwire -m u --twrfile "$(find /var/lib/tripwire/report/ -cmin -1 -type f)" -a
#expect "passphrase:"#
#password::Enter password for tripwire#
#timeout#
TRIPWIRE
        sed '/^#tripwire#/d' "$commands_file"
    )

    echo "$commands" > "$commands_file"

    # expand #passwd# token
    while grep -q '^#passwd' "$commands_file"; do
        read line username <<<$(awk '/^#passwd/ {if ($2) {print NR,substr($0, index($0,$2), length($2)-1)} else {print NR,"root"}; exit}' "$commands_file")

        # insert shell commands for password change
        sed "$line r /dev/stdin" "$commands_file" > "${commands_file}.tmp" <<PASSWD
passwd $username
#password:2:Enter new password for $username#
PASSWD

        # remove passwd token
        sed "${line}d" "${commands_file}.tmp" > "$commands_file"
    done

    commands=$(cat "$commands_file")

    rm -f $commands_file{,.tmp}
}

# execute expect script against provided host
#
# NOTE: if you attempt to connect to the same host multiple times
#       concurrently, you will likely see failures due to the speed
#       in which the connections are attempted
#
# $1 - host - the host to run script against
run_hosts () {
    local count host logger_pid passwords total

    count=1
    total=$#

    # watch for finished host output to print to stdout
    if [[ $concurrency -gt 1 ]]; then
        finished=1

        {
            while [[ $finished -le $total ]]; do
                if [[ -r $(echo ${tmp_dir}/${finished}-*.log) ]]; then
                    echo -e "\nJob $finished of $total Completed" |  tr '[:lower:]' '[:upper:]' >&2

                    cat ${tmp_dir}/${finished}-*.log
                    rm -f ${tmp_dir}/${finished}-*.log
                    ((finished+=1))
                fi
            done
        } &

       logger_pid=$!
    fi

    while [[ $# -gt 0 ]]; do
        passwords=( )
        host="$1"

        if [[ $concurrency -gt 1 ]]; then
            running=$(jobs -p | grep -v $logger_pid | wc -l)

            if [[ $running -lt $concurrency ]]; then
                echo -e "\nSpawning job $count of $total for $host" |  tr '[:lower:]' '[:upper:]' >&2

                {
                    # run script if host is available
                    if ping -qn -c1 "$host" 2>&1 | grep -q '1.*received'; then
                        # convert patterns to host based passwords
                        if [[ ${#password_patterns[*]} -gt 0 ]]; then
                            for pattern in "${password_patterns[@]}"; do
                                passwords+=( "$(get_password $host "${pattern-}")" )
                            done
                        fi

                       expect -f "$script" "$username" "$host" "$(get_password $host "${root_password_pattern-}")" "$(get_password $host "${sudo_password_pattern-}")" "$(get_password $host "${login_password_pattern-}")" "${passwords[@]-}" > "${tmp_dir}/${count}-${host}.running"
                       mv "${tmp_dir}/${count}-${host}.running" "${tmp_dir}/${count}-${host}.log"
                    else
                        echo -e "\n                   #       UNAVAILABLE: $host      #" > "${tmp_dir}/${count}-${host}.log"
                        continue
                    fi
                } &

                ((count+=1))
                shift
            fi
        else
            echo -e "\nSpawning job $count of $total for $host" |  tr '[:lower:]' '[:upper:]' >&2

            # run script if host is available
            if ping -qn -c1 "$host" 2>&1 | grep -q '1.*received'; then
                # convert patterns to host based passwords
                if [[ ${#password_patterns[*]} -gt 0 ]]; then
                    for pattern in "${password_patterns[@]}"; do
                        passwords+=( "$(get_password $host "${pattern-}")" )
                    done
                fi

                expect -f "$script" "$username" "$host" "$(get_password $host "${root_password_pattern-}")" "$(get_password $host "${sudo_password_pattern-}")" "$(get_password $host "${login_password_pattern-}")" "${passwords[@]-}"
            else
                echo -e "\n                   #       UNAVAILABLE: $host      #"
                continue
            fi

            ((count+=1))
            shift
        fi
    done

    wait
}



# process arguments
for arg in $@; do
    case "$arg" in
        -c)
            concurrency='-c'
            ;;
        -c[0-9]*)
            concurrency=${arg#-c}
            ;;
        -h)
            print_usage 'verbose' >&2
            exit 0
            ;;
        -o)
            output='-o'
            ;;
        -p)
            ssh_agent=true
            password_auth=true
            ;;
        -P)
            ssh_agent=false
            password_auth=true
            ;;
        -r)
            $sudo && error 'cannot combine -R with -r'
            su=true
            ;;
        -R)
            $su && error 'cannot combine -r with -R'
            sudo=true
            ;;
        -f)
            commands='-f'
            ;;
        -u)
            username='-u'
            ;;
         *)
            if [[ "$concurrency" == '-c' ]] && [[ "$arg" =~ ^[0-9]+$ ]]; then
                    concurrency=$arg
            elif [[ "$commands" == '-f' ]]; then
                [[ ! -r "$arg" ]] && error 'cannot read provided command file'
                commands=$(cat "$arg")
            elif [[ "$output" == '-o' ]]; then
                output="$arg"
            elif [[ "$username" == '-u' ]]; then
                username="$arg"
            else
                hosts+=( "$arg" )
            fi
            ;;
    esac
done

# sanity check
[[ ${#hosts[*]} -eq 0 ]] && error 'no hosts provided'

# set default concurrecy if number was not provided
[[ "$concurrency" == '-c' ]] && concurrency=10

# set default username if none was provided
[[ "$username" == '-u' ]] && username=$USER

# capture commands from stdin
if [[ -z "$commands" ]]; then
    stdin=$(cat <&0)

    if [[ "$stdin" ]]; then
        commands="$stdin"
    elif [[ -z "$stdin" ]]; then
        error 'no commands provided'
    fi
fi

# sanity check
[[ $concurrency -gt 1 ]] && grep -q '^#interact#' <<<"$commands" && error '#interact# is not allowed when combined with concurrency'

# parse tokens within commands
parse_tokens

# check for active ssh-agent
if $ssh_agent && ! ssh-add -l >/dev/null 2>&1; then
    load_ssh_agent=true
fi

# prompt user to continue
{
    if $su || $sudo; then
        echo -e "\nCOMMANDS (run as root):\n"
    else
        echo -e "\nCOMMANDS (run as $username):\n"
    fi

    while read cmd;  do
        echo -e "\t$cmd"
    done <<<"$commands"

    if [[ ${#hosts[*]} -gt 1 ]]; then
        if [[ $concurrency -gt 1 ]]; then
            echo -e "\nHOSTS (up to $concurrency systems executed concurrently):"
        else
            echo -e "\nHOSTS (executed incrementally):"
        fi

        for host in "${hosts[@]}"; do
            echo -e "\t$host"
        done
    else
        echo -e "\nHOST:\t${hosts[*]}"
    fi

    if $load_ssh_agent; then
        echo -e '\nNOTE:'
        echo -e '\tYou currently do not have any keys loaded into an ssh agent.'
        echo
        echo -e '\tIf you choose to continue an agent will be started for you.'
        echo
        echo -e '\tYou will then be prompted to enter the passphrase for any keys'
        echo -e '\tfound in your ~/.ssh directory.'
        echo
        echo -e '\tNote: You only need to provide the passphrase for the key'
        echo -e '\t      necessary for the servers you are executing against.'
        echo
        echo -e '\t      Simply hitting "Enter" when prompted for an unnecessary'
        echo -e '\t      key is sufficient to skip loading that key.'
        echo
        echo -e '\tThis agent will be destroyed when ssh-exec exits.'
    fi

    warnings=( )
    # hand-holding: check for commands that may exceed default timeout
    if ! grep -q '^#timeout' <<<"$commands"; then
        grep -q 'tripwire' <<<"$commands" && warnings+=("tripwire will likely cause the script to exceed the 10 second timeout\n\t\t- you will likely need to override the timeout period by using #timeout -1#\n\t\t- you may want to consider using the builtin #tripwire# token instead")
    fi

    # hand-holding: check for password change without password being provided
    if ! grep -q '^#password:2' <<<"$commands"; then
        grep -q 'passwd' <<<"$commands" && warnings+=("passwd will require the #password:2# token\n\t\t- you may want to consider using the builtin #passwd <username># token instead")
    fi

    # hand-holding: check for rm -rf
    if grep -q 'rm -rf /' <<<"$commands"; then
        warnings+=("rm -rf can be dangerous when automated!\n\t  make sure you double check the commands above before continuing")
    fi

    if [[ ${#warnings[*]} -gt 0 ]]; then
        echo -e '\nWARNINGS:'
        for warning in "${warnings[@]}"; do
            echo -e "\t* $warning\n"
        done
    fi
} | tee -a "$output"

# flush stdin before prompting to continue
0<&-
exec 0</dev/tty

echo -e -n "\nAre you sure you want to continue [y/N]? "
read continue

if [[ ! "$continue" =~ y|Y ]]; then
    echo 'Aborted!'
    exit 0
fi

# load ssh-agent
$load_ssh_agent && ssh_agent_init

# collect password patterns from user
get_password_patterns

# convert shell commands into expect script
generate_script

# run generated script against all provided hosts
run_hosts ${hosts[@]} | tee -a "$output"

exit 0
